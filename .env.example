# ===========================================
# Firestore Configuration
# ===========================================
# Enable the emulator (Set to "false" for real GCP)
USE_FIRESTORE_EMULATOR=true
# (Optional) Comment out host, it won't be used if not in emulator mode
FIRESTORE_EMULATOR_HOST=localhost:8080

# Set your Project ID (Use a dummy ID for local emulator)
GOOGLE_CLOUD_PROJECT=elevendops-local
# (Optional) Service Account Key path for Signed URL testing in local dev
# GOOGLE_APPLICATION_CREDENTIALS=C:\path\to\your\service-account-key.json

# (Optional) Set to "true" to use in-memory mock data (overrides Firestore settings)
USE_MOCK_DATA=false

# (Optional) Firestore database ID (use "(default)" for the default database)
# For custom-named databases, set the actual name (e.g., "elevendops-db")
FIRESTORE_DATABASE_ID=(default)

# ===========================================
# GCS Configuration
# ===========================================
# Enable the emulator (Set to "false" for real GCP)
USE_GCS_EMULATOR=true
# (Optional) Comment out host
GCS_EMULATOR_HOST=http://localhost:4443

# Set your Bucket Name
GCS_BUCKET_NAME=elevendops-audio


# ----- ElevenLabs Configuration -----
# Required: Get your API key from https://elevenlabs.io
# ELEVENLABS_API_KEY=your_api_key_here

# ----- Google AI Configuration -----
# Required: Get your API key from https://aistudio.google.com/
# GOOGLE_API_KEY=your_api_key_here

# ----- LangSmith Configuration -----
# Optional: Get your API key from https://smith.langchain.com/
# LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=elevendops-langgraph-debug
LANGSMITH_TRACING_ENABLED=true
LANGSMITH_TRACE_LEVEL=info

# ----- Application Configuration -----
DEBUG=true
# Enable demo mode for public demos (disables delete operations in UI)
# DEMO_MODE=false
LOG_LEVEL=INFO
EMULATOR_DATA_PATH=./emulator-data

# ----- Server Configuration -----
# STREAMLIT_PORT=8501
# FASTAPI_PORT=8000
# BACKEND_API_URL=http://localhost:8000
