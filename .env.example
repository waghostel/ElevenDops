# ===========================================
# ElevenDops Local Development Configuration
# ===========================================
# Copy this file to .env and update values as needed

# ----- Firestore Configuration -----
# Set to "true" for local development with emulator
# Set to "false" for production Cloud Firestore
USE_FIRESTORE_EMULATOR=true
FIRESTORE_EMULATOR_HOST=localhost:8080
GOOGLE_CLOUD_PROJECT=elevenlabs-local
# Set to "true" to use in-memory mock data (overrides Firestore settings if Emulator is false)
USE_MOCK_DATA=false

# ----- GCS Configuration -----
# Set to "true" for local development with fake-gcs-server
# Set to "false" for production Cloud Storage
USE_GCS_EMULATOR=true
GCS_EMULATOR_HOST=http://localhost:4443
GCS_BUCKET_NAME=elevenlabs-audio

# ----- ElevenLabs Configuration -----
# Required: Get your API key from https://elevenlabs.io
# ELEVENLABS_API_KEY=your_api_key_here

# ----- Google AI Configuration -----
# Required: Get your API key from https://aistudio.google.com/
# GOOGLE_API_KEY=your_api_key_here

# ----- LangSmith Configuration -----
# Optional: Get your API key from https://smith.langchain.com/
# LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=elevendops-langgraph-debug
LANGSMITH_TRACING_ENABLED=true
LANGSMITH_TRACE_LEVEL=info

# ----- Application Configuration -----
DEBUG=true
LOG_LEVEL=INFO
EMULATOR_DATA_PATH=./emulator-data

# ----- Server Configuration -----
# STREAMLIT_PORT=8501
# FASTAPI_PORT=8000
# BACKEND_API_URL=http://localhost:8000
